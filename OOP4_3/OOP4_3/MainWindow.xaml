        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP4_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Run Tests" Click="RunTests_Click" Margin="10,60,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="244" Height="97"/>
        <TextBlock x:Name="successesCount" Margin="5" VerticalAlignment="Top"/>
        <TextBlock x:Name="failuresCount" Margin="5,30,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="reasonsList" Margin="299,60,39.6,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
